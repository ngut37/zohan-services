{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "incremental": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["./config/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "**/build/**"]
}