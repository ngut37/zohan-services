{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "incremental": false,
    "noEmit": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["./config/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"],
      "@middlewares/*": ["./controllers/middlewares/*"]
    }
  },
  "include": ["./config", "**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "**/build/**"]
}